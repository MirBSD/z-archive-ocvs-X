			    struct vertex_buffer *VB,
			    GLfloat *O, GLuint *elt );

   void (*interp)( GLfloat t, GLfloat *O,
		   const GLfloat *I, const GLfloat *J );

   void (*project_and_emit_verts)( mgaContextPtr mmesa,
				   const GLfloat *verts,
				   GLuint *elts,
				   int nr );
};

