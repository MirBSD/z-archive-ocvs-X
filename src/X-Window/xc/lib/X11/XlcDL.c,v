Bool
#if NeedFunctionPrototypes
_XInitDynamicOM(XLCd lcd)
#else
_XInitDynamicOM(lcd)
    XLCd lcd;
#endif
{
    if(lcd == (XLCd)NULL)
	return False;

    lcd->methods->open_om = _XDynamicOpenOM;

    return True;
}
