      if (!objects_list->dl_module) continue;
    }
#if defined(hpux)
    getsyms_cnt = shl_getsymbols(objects_list->dl_module, TYPE_PROCEDURE,
	EXPORT_SYMBOLS, malloc, &symbols);

    for(i=0; i<getsyms_cnt; i++) {
