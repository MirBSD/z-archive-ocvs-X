int
x_strcasecmp(const char *s1, const char *s2)
{
    unsigned len = strlen(s1);

    if (len != strlen(s2))
	return 1;

    while (len-- != 0) {
	if (toupper(CharOf(*s1)) != toupper(CharOf(*s2)))
	    return 1;
	s1++, s2++;
    }

    return 0;
}

