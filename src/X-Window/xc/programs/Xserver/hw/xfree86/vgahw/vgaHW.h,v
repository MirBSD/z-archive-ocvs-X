#define VGAHW_UNLOCK(base)	do {					      \
				  unsigned char tmp;			      \
				  outb((base) + VGA_CRTC_INDEX_OFFSET, 0x11); \
				  tmp = inb((base) + VGA_CRTC_DATA_OFFSET);   \
