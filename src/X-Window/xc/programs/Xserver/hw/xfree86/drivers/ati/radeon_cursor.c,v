    OUTREG(RADEON_SURFACE_CNTL, \
	   ((__surface_cntl = INREG(RADEON_SURFACE_CNTL)) | \
	    RADEON_NONSURF_AP0_SWP_32BPP) & \
	   ~RADEON_NONSURF_AP0_SWP_16BPP)
#define CURSOR_SWAPPING_END()	(OUTREG(RADEON_SURFACE_CNTL, __surface_cntl))
