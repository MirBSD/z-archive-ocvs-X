									@@@@\
encodings.dir: deplist							@@@@\
	RemoveFiles(encodings.dir fonts.dir)				@@@@\
	ImakeHelper 16 MkFontDir dirlist				@@@@\
									@@@@\
clean::									@@@@\
	RemoveFiles(fonts.dir encodings.dir)
#endif
