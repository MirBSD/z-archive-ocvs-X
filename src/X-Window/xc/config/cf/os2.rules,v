#define AssembleObject(flags) RemoveFile($@@)                            @@@@\
	$(CPP) AsmDefines $(DEFINES) $(INCLUDES) flags $*.S | grep -v '^\#' > _tmp_.s @@@@\
	$(CC) $(CFLAGS) -o $*.Osuf -c _tmp_.s                           @@@@\
	RemoveFile(_tmp_.s)

