#ifndef InstallLink
#define InstallLink(step, file, link, dest)                             @@@@\
step::                                                                  @@@@\
	MakeDir($(DESTDIR)dest)                                         @@@@\
	$(LN) -sf file $(DESTDIR)dest/link
#endif   
    
