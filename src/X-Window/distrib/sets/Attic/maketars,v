1.1
log
@Initial revision
@
text
@d1 2
a2 1
#!/bin/csh -f
d4 4
a7 1
set RELEASE=$1
d9 1
a9 1
if ( "X${RELEASE}" == "X" ) then
d12 1
a12 1
endif
d14 1
a14 1
if (! $?RELEASEDIR) then
d17 1
a17 1
endif
d19 1
a19 1
if (! $?DESTDIR) then
d22 1
a22 1
endif
d24 4
a27 4
set arch=${MACHINE}
set listsdir=`pwd`/lists
set tardir=$RELEASEDIR
set fsdir=$DESTDIR
d29 1
a29 1
cd $fsdir
d31 1
a31 1
set lists=(xbase xserv xshare)
d33 5
a37 1
foreach setname ($lists)
d39 2
a40 2
	cat $listsdir/$setname/mi $listsdir/$setname/md.${arch} | sort | \
	    pax -w -d | gzip -9 > ${tardir}/${setname}${RELEASE}.tgz
d42 1
a42 13
end

if ( "$arch" != "vax" && "$arch" != "hppa" ) then
	if ( "$arch" == "hp300" || "$arch" == "pmax" ) then
    		set xvers=x11r5
	else
    		set xvers=x11r6
	endif
	set setname=xfont
	echo -n "${setname}: "
	cat $listsdir/$setname/mi $listsdir/$setname/md.${xvers} | sort | \
    		pax -w -d | gzip -9 > ${tardir}/${setname}${RELEASE}.tgz
endif
@


