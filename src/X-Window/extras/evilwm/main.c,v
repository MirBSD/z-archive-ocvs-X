static void *xmalloc(size_t size) {
	void *ptr = malloc(size);
	if (!ptr) {
#ifdef STDIO
		fprintf(stderr,"out of memory, looking for %d bytes\n",size);
#endif
		exit(1);
	}
	return ptr;
