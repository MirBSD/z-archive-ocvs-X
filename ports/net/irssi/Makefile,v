		INSTALLARCHLIB='${MODPERL_DESTDIR:C/^\\\$/\\\\\\\\\$\$\$\$/}/usr/./libdata/perl5/${MACHINE_ARCH}-${A_OS}' \
		INSTALLSITELIB='${MODPERL_DESTDIR:C/^\\\$/\\\\\\\\\$\$\$\$/}${PREFIX}/${P5SITE}' \
		INSTALLSITEARCH='${MODPERL_DESTDIR:C/^\\\$/\\\\\\\\\$\$\$\$/}${PREFIX}/${P5ARCH}' \
