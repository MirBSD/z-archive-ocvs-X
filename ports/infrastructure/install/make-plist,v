sub may_annotate_and_move
{
	my $p = shift;

	if (-e $p) {
	    my $fh = new IO::File "<$p";
	    rename($p, "$p.orig") or die "Can't rename $p to $p.orig";
	    my $newfh = new IO::File ">$p";
	    annotate($fh, $p, $newfh);
	    close $fh;
	    $out{$p} = $newfh;
	    return 1;
    	} else {
		return 0;
	}
}
