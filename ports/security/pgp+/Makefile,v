DOCADD=			${FILESDIR}/RFRAG.no_idea
PATCH_LIST+=		noidea_patch-src_pgp_c

post-patch:
	cp ${FILESDIR}/idea.c ${WRKSRC}/

.else
DOCADD=		${FILESDIR}/RFRAG.idea
.endif
a52 2
	sed -e '1s!/!\\/!5' -e '1s!/!\\/!6' <${DOCADD} \
	    | ed -s ${WRKDIST}/doc/${DOCFILE}
