		${PORTSDIR}/infrastructure/patches/patch-lt1.3.5-ltmain_sh

post-install:
	${INSTALL_DATA_DIR} ${PREFIX}/share/doc/xmlsec
	 cp -R ${WRKSRC}/docs/* ${PREFIX}/share/doc/xmlsec
