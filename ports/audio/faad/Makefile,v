USE_GMAKE=	Yes
WRKDIST=	${WRKDIR}/faad2

CONFIGURE_STYLE=autogen
AUTOCONF_NEW=	Yes
CONFIGURE_ENV+=	LIBS="-lm"
CONFIGURE_ARGS+=--with-mp4v2

.include <bsd.port.mk>
@


